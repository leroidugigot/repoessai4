  <script>
  function toggleFAQ() {
    const modal = document.getElementById('faqModal');
    modal.classList.toggle('hidden');
  }
  
  document.addEventListener('click', (e) => {
    const modal = document.getElementById('faqModal');
    if (e.target === modal) {
      modal.classList.add('hidden');
    }
  });
  
  document.querySelector('#faqModal > div').addEventListener('click', (e) => {
    e.stopPropagation();
  });
  </script>