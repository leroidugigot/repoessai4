<!-- views/modules.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modules de la Formation</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto my-10 p-5">
        <!-- En-tête de la page -->
        <h1 class="text-3xl font-bold text-center mb-8 text-gray-700">Modules de la Formation</h1>
        
        <!-- Information sur la formation -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h2 class="text-2xl font-semibold text-gray-800"><%= formation.nom %></h2>
            <p class="text-gray-600 mt-2"><%= formation.description %></p>
        </div>
        
        <!-- Liste des modules -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% formation.modules.forEach(module => { %>
                <div class="bg-white rounded-lg shadow-md p-5">
                    <h3 class="text-xl font-semibold text-gray-800"><%= module.nom %></h3>
                    <p class="text-gray-600 mt-2"><%= module.description || "Aucune description disponible" %></p>
                    <button 
                        class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
                        onclick="showModuleContent('<%= formation.formationId %>', '<%= module.moduleId %>')">
                        Voir le contenu
                    </button>
                </div>
            <% }); %>
        </div>

        <!-- Section pour afficher le contenu du module sélectionné -->
        <div id="moduleContent" class="mt-10 p-6 bg-white rounded-lg shadow-lg hidden">
            <h2 id="moduleTitle" class="text-2xl font-semibold text-gray-800 mb-4"></h2>
            <p id="moduleDetails" class="text-gray-600"></p>
            <button 
                class="mt-4 bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600"
                onclick="closeModuleContent()">
                Fermer
            </button>
        </div>
    </div>

    <script>
        // Fonction pour récupérer et afficher le contenu d'un module
        function showModuleContent(formationId, moduleId) {
            fetch(`/formations/${formationId}/modules/${moduleId}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById('moduleContent').classList.remove('hidden');
                    document.getElementById('moduleTitle').textContent = data.nom;
                    document.getElementById('moduleDetails').textContent = data.contenu || "Pas de contenu disponible pour ce module.";
                })
                .catch(error => console.error("Erreur lors de la récupération du contenu du module:", error));
        }

        // Fonction pour masquer le contenu du module
        function closeModuleContent() {
            document.getElementById('moduleContent').classList.add('hidden');
        }
    </script>
</body>
</html>
