<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Page Principale</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="stylesheet" href="/public/css/style_protected.css" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html,
      body {
        height: 100vh;
        overflow: hidden;
        scrollbar-width: none;
      }

      .parent {
        display: grid;
        grid-template-columns: repeat(2, 0.75fr) repeat(8, 1fr) repeat(
            2,
            0.75fr
          );
        grid-template-rows: repeat(12, 1fr);
        height: 100vh;
        width: 100vw;
      }

      .div-parent-left {
        background-image: url("/public/images/img/bgleft.png");
        background-size: cover;
        background-position: center;
        grid-area: 2 / 1 / 13 / 3;
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      .div-parent-right {
        background-image: url("/public/images/img/bgright.png");
        background-size: cover;
        background-position: center;
        grid-area: 2 / 11 / 13 / 13;
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      .div1 {
        grid-area: 1 / 1 / 2 / 3;
      }
      .div2 {
        grid-area: 1 / 3 / 2 / 9;
      }
      .div3 {
        grid-area: 1 / 9 / 2 / 13;
      }
      .div4 {
        grid-area: 2 / 3 / 3 / 11;
      }
      .div5 {
        height: 16.666%;
      } /* 1/6 of parent height */
      .div6 {
        height: 66.666%;
      } /* 4/6 of parent height */
      .div7 {
        height: 16.666%;
      } /* 1/6 of parent height */
      .div8 {
        height: 60%;
      }
      .div9 {
        height: 20%;
      }
      .div10 {
        height: 20%;
      }
      .div12 {
        grid-area: 2 / 3 / 13 / 11;
      }

      /* Scrollbar styles */
      body::-webkit-scrollbar,
      #mainContent::-webkit-scrollbar,
      .div6::-webkit-scrollbar {
        display: none;
      }

      #mainContent {
        display: flex;
        justify-content: center;
        width: 100%;
        height: 100%

      }
      
      body,
      #mainContent,
      .div6 {
        -ms-overflow-style: none;
      }

      #navbarHidden {
        transition: opacity 0.3s ease-in-out;
      }

      #navbarHidden.opacity-0 {
        opacity: 0;
        pointer-events: none;
      }

      #navbarHidden.hidden {
        display: none;
      }

      .full-width {
        grid-column: 1 / 13;
      }

      #gptButton {
        color: white;
        padding: 10px 15px;
        border-radius: 50%;
        font-size: 18px;
        cursor: pointer;
        z-index: 100;
      }

      .btn-inscription {
        display: inline-block;
        padding: 10px 24px;
        background-color: var(--accent-color);
        color: #ffffff;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-align: center;
        transition: background-color 0.3s, transform 0.2s;
        box-shadow: 0 4px 10px var(--shadow);
      }

      .btn-inscription:hover {
        background-color: #f57c00;
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      }

      .btn-inscription:active {
        transform: translateY(1px);
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <div class="parent">
      <!-- Div1 - Logo -->
      <div
        class="div1 bg-gray-800 flex justify-center items-center w-full h-full border border-gray-700"
      >
        <%- include('partials/logoSite') %>
      </div>

      <!-- Div2 - Navbar -->
      <div class="div2 bg-gray-800 w-full h-full border border-gray-700">
        <%- include('partials/navbar') %>
      </div>

      <!-- Div3 - Logbar -->
      <div
        class="div3 bg-gray-800 text-white flex items-center justify-center w-full h-full border border-gray-700"
      >
        <%- include('partials/logbar', { user }) %>
      </div>

      <!-- Div4 - Navbar Hidden -->
      <div
        id="navbarHidden"
        class="div4 z-50 w-full h-full border border-gray-700 hidden"
      >
        <%- include('partials/navbarHidden') %>
      </div>

      <!-- Left Parent Div -->
      <div id="div-parent-left" class="div-parent-left border border-gray-700">
        <!-- Div5 - Lesson Online -->
        <div id="div5" class="div5 bg-transparent w-full">
          <%- include('partials/lessonOnLine', { currentFormation }) %>
        </div>

        <!-- Div6 - Chapter List -->
        <div id="div6" class="div6 bg-transparent w-full overflow-y-auto">
          <%- include('partials/chapterList', { currentFormation:
          currentFormation?.formation?.nom || null, currentModule: null }) %>
        </div>

        <!-- Div7 - Dashboard -->
        <div id="div7" class="div7 bg-transparent w-full">
          <%- include('partials/dashboarddiv') %>
        </div>
      </div>

      <!-- Right Parent Div -->
      <div
        id="div-parent-right"
        class="div-parent-right border border-gray-700"
      >
        <!-- Div8 - Connected Users -->
        <div id="div8" class="div8 bg-transparent w-full">
          <%- include('partials/connectedList') %>
        </div>

        <!-- Div9 - Referentials -->
        <div id="div9" class="div9 bg-transparent w-full">
          <%- include('partials/referentiels') %>
        </div>

        <!-- Div10 - Contact -->
        <div id="div10" class="div10 bg-transparent w-full relative">
          <%- include('partials/contact') %>
        </div>
      </div>

      <!-- Div11 - Input GPT -->
      <div id="gptInput" class="div12 hidden overflow-auto w-full h-full">
        <%- include('partials/inputgpt') %>
      </div>

      <!-- Div12 - Main Content -->
      <div
        id="mainContent"
        class="div12 border border-gray-700 overflow-y-auto  w-full h-full"
      >
        <%- include('partials/contenus', { csrfToken: locals.csrfToken }) %>
      </div>
    </div>

    <button id="gptButton" class="fixed bottom-10 right-10 visible">
      <i id="gptIconInactive" class="fas fa-comment-dots"></i>
      <i id="gptIconActive" class="fas fa-comment-slash hidden"></i>
    </button>

    <button id="toggleButton" class="fixed top-10 right-10"></button>

    <script>
      // Fonction pour afficher le profil
      function showProfile() {
        const mainContent = document.getElementById("mainContent");
        fetch("/profile") // Créez cette route dans votre backend
          .then((response) => response.text())
          .then((html) => {
            mainContent.innerHTML = html;
          })
          .catch((error) =>
            console.error("Erreur lors du chargement du profil:", error)
          );
      }

      // Mettre à jour les statistiques du profil
      function updateProfileStats(stats) {
        if (!stats) return;

        const elements = {
          completedModules: document.getElementById("completedModulesCount"),
          quizAverage: document.getElementById("quizAverage"),
          totalTime: document.getElementById("totalTime"),
        };

        if (elements.completedModules) {
          elements.completedModules.textContent = stats.completedModules;
        }

        if (elements.quizAverage) {
          elements.quizAverage.textContent = `${Math.round(
            stats.quizAverage
          )}%`;
        }

        if (elements.totalTime) {
          elements.totalTime.textContent = `${Math.floor(
            stats.totalTime / 60
          )}h ${stats.totalTime % 60}m`;
        }
      }
    </script>
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/public/javascripts/scripts_protected.js"></script>
  </body>
</html>
